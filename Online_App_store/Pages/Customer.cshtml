@page
@model Online_App_store.Pages.CustomerModel
@{
	Layout = "Custumer_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>App List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>App List</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>App Name</th>
                    <th>Developer Name</th>
                    <th>Type</th>
                    <th>Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model.Apps)
                {
                    <tr>
                        <td>@app.AppName</td>
                        <td>@app.DevName</td>
                        <td>@app.Type</td>
                        <td><a href="/download/@app.AppFile" class="btn btn-primary">Download</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>